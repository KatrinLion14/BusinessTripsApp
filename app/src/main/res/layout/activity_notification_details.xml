<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_800"
    tools:context=".notification_activity.NotificationActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/TextHeader2">
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/startDate"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Caption"
            android:text="Дата начала"/>
        <TextView
            android:id="@+id/startDateData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Body2"
            tools:text="16.04.2023"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/endDate"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/startDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Caption"
            android:text="Дата завершения"/>
        <TextView
            android:id="@+id/endDateData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Body2"
            tools:text="16.04.2023"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/destination"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/endDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Caption"
            android:text="Место командировки"/>
        <TextView
            android:id="@+id/destinationData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Body2"
            tools:text="Москва, 1-й Волоколамский пр-д, д. 10, стр. 1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/destination"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Caption"
            android:text="Статус"/>
        <TextView
            android:id="@+id/statusData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Body2"
            tools:text="В обработке"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>