<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary_600</item>
    </style>

    <style name="ButtonText" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/info_600</item>
        <item name="android:textAppearance">@style/Text_Button_14pt</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonNegativeText" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/negative_500</item>
        <item name="android:textAppearance">@style/Text_Button_14pt</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonPrimary" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/button_background_primary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/Text_Button_14pt</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonSecondary" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background_secondary</item>
        <item name="android:textColor">@color/info_600</item>
        <item name="android:textAppearance">@style/Text_Button_14pt</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="Text_H1_28pt">
        <item name="android:textSize">
            28sp
        </item>
        <item name="fontFamily">
            @font/open_sans_regular
        </item>
    </style>

    <style name="Text_H2_20pt" parent="TextAppearance.AppCompat">
        <item name="android:textSize">
            20sp
        </item>
        <item name="fontFamily">
            @font/open_sans_regular
        </item>
    </style>

    <style name="Text_Subtitle_18pt" parent="TextAppearance.AppCompat">
        <item name="android:textSize">
            18sp
        </item>
        <item name="fontFamily">
            @font/open_sans_semi_bold
        </item>
    </style>

    <style name="Text_Body_16pt" parent="TextAppearance.AppCompat">
        <item name="android:textSize">
            16sp
        </item>
        <item name="fontFamily">
            @font/open_sans_regular
        </item>
    </style>

    <style name="Text_Body2_14pt" parent="TextAppearance.AppCompat">
        <item name="android:textSize">
            14sp
        </item>
        <item name="fontFamily">
            @font/open_sans_light
        </item>
    </style>

    <style name="Text_Button_14pt" parent="TextAppearance.AppCompat">
        <item name="android:textSize">
            14sp
        </item>
        <item name="fontFamily">
            @font/open_sans_semi_bold
        </item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Text_Secondary_12pt" parent="TextAppearance.AppCompat">
        <item name="android:textSize">
            12sp
        </item>
        <item name="fontFamily">
            @font/open_sans_regular
        </item>
    </style>


    <style name="Text_Caption_10pt" parent="TextAppearance.AppCompat">
        <item name="android:textSize">
            10sp
        </item>
        <item name="fontFamily">
            @font/open_sans_regular
        </item>
    </style>

    <style name="TitleOfListElement" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/base_700</item>
        <item name="android:textAppearance">@style/Text_Body2_14pt</item>
    </style>

    <style name="GenericProgressBackground" parent="android:Theme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="GenericProgressIndicator" parent="@android:style/Widget.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/info_600</item>
    </style>

</resources>